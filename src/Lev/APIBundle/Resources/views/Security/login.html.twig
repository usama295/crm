{% extends 'LevAPIBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
{% block fos_user_content %}

<div class="container">

    <div class="login">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <h1>Login</h1>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <!-- Login form (not working)-->
                    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-vertical">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                        <!-- Username -->
                        <div class="form-group">
                            <input class="form-control input-lg" type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="input-large" placeholder="{{ 'security.login.username'|trans }}" />
                        </div>
                        <!-- Password -->
                        <div class="form-group">
                            <input class="form-control input-lg input-large" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" />
                        </div>

                        <button type="submit" class="btn btn-default btn-primary btn-lg btn-block" style="margin: 0;width:100%">{{ 'security.login.submit'|trans }}</button>

                        <hr/>

                        <a class="btn btn-default btn-group-lg pull-right" href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans }}</a>
                    </form>
            </div>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
{% endblock content %}
